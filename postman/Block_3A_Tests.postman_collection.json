{
  "info": {
    "name": "Aula Colaborativa - Block 3A",
    "description": "Authentication and Middleware Testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "1. Join as Teacher",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Prof. García\",\n  \"role\": \"teacher\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/join",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "join"]
            }
          }
        },
        {
          "name": "2. Join as Student",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Ana Martínez\",\n  \"role\": \"student\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/join",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "join"]
            }
          }
        },
        {
          "name": "3. Get Me (Current User)",
          "request": {
            "method": "GET",
            "header": [],
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{teacher_token}}",
                  "type": "string"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
